<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="5dp">

    <!--  blok reklamowy  -->
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        android:layout_marginBottom="6dp"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
    <!--  end -->


    <EditText
        android:id="@+id/editText"
        android:textSize="40pt"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="right|center"
        android:layout_weight="1"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/butAC"
                android:text="C"
                android:onClick="clickAC"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/butSign"
                android:text="+ / -"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/butPercent"
                android:text="%"
                android:onClick="clickPrecent"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/butMultiply"
                android:text="*"
                android:onClick="operation"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but7"
                android:text="7"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/but8"
                android:text="8"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/but9"
                android:text="9"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/butDivide"
                android:text="/"
                android:onClick="operation"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but4"
                android:text="4"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/but5"
                android:text="5"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/but6"
                android:text="6"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/butPlus"
                android:text="+"
                android:onClick="operation"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/but1"
                android:text="1"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/but2"
                android:text="2"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/but3"
                android:text="3"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/butMinus"
                android:text="-"
                android:onClick="operation"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/butDot"
                android:text="."
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="3"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/but0"
                android:text="0"
                android:onClick="clickNumber"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="3"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
            <Button
                android:id="@+id/butEqual"
                android:text="="
                android:onClick="clickResult"
                android:height="33pt"
                android:width="33pt"
                android:layout_weight="2"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
        </TableRow>
    </LinearLayout>

</LinearLayout>